<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/siguiente"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
      android:hint="GESTIONAR MASCOTAS "
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:id="@+id/textView1" />
    
     <ImageView
        android:src="@drawable/mascota"
        android:layout_width="match_parent"
        android:layout_height="125.5dp"
        android:id="@+id/imageView1" />


    <EditText
        android:hint="ID(campo identity no ingresar)"
        android:inputType="number"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40.5dp"
        android:layout_marginTop="30dip"
        android:background="#eff"
        android:id="@+id/txtIdMascota"
        android:layout_marginBottom="0.0dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreMascota"
        android:background="#eff"
        android:layout_marginTop="30dip"
        android:hint="NOMBRE DE LA MASCOTA"
        android:gravity="center"/>

    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/txtCedulaDueño"
       android:background="#eff"
        android:layout_marginTop="30dip"
       android:hint="CEDULA DEL DUEÑO"
       android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEdadMascota"
        android:background="#eff"
        android:layout_marginTop="30dip"
        android:hint="EDAD DE LA MASCOTA"
        android:gravity="center"/>

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtEspecieMascota"
      android:background="#eff"
        android:layout_marginTop="30dip"
      android:hint="ESPECIE"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtRazaMascota"
      android:background="#eff"
        android:layout_marginTop="30dip"
      android:hint="RAZA"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtCaracteristicasMascota"
      android:background="#eff"
        android:layout_marginTop="30dip"
      android:hint="CARACTERISTICAS DE LA MASCOTA"
      android:gravity="center" />

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtPesoMascota"
      android:background="#eff"
        android:layout_marginTop="30dip"
      android:hint="PESO"
      android:gravity="center" />

    <Button
       android:text="REGISTRAR"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:layout_marginTop="30dip"
       android:textColor="@android:color/white"
       android:id="@+id/btnRegistrar" />

    <Button
       android:text="CONSULTAR"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:textColor="@android:color/white"
       android:id="@+id/btnConsultarPes" />
    <Button
       android:text="IR AL INICIO"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:textColor="@android:color/white"
       android:id="@+id/btnIrInicio" />
   

</LinearLayout>
