<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/siguiente"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
      android:text="GESTIONAR FACTURA"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:id="@+id/textView1" 
        />

    <ImageView
        android:src="@drawable/factura"
        android:layout_width="match_parent"
        android:layout_height="125.5dp"
        android:id="@+id/imageView1" />

       <EditText
        android:hint="ID FACTURA(campo unico)"
        android:inputType="number"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eff"
        android:layout_marginTop="30dip"
        android:id="@+id/txtIdAve"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreAve"
        android:background="#eff"
        android:layout_marginTop="30dip"
        android:hint="ID MASCOTA"
        android:gravity="center"/>

    <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/txtCedulaDueño"
       android:layout_marginTop="30dip"
       android:background="#eff"
       android:hint="ID DUEÑO"
       android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEdadAve"
        android:layout_marginTop="30dip"
        android:background="#eff"
        android:hint="ID ORDEN"
        android:gravity="center"/>

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtEspecieAve"
      android:layout_marginTop="30dip"
      android:background="#eff"
      android:hint="NOMBRE PRODUCTO"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#eff"
      android:layout_marginTop="30dip"
      android:id="@+id/txtRazaAve"
      android:hint="VALOR"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtCaracteristicasAve"
        android:background="#eff"
         android:layout_marginTop="30dip"
      android:hint="CANTIDAD"
      android:gravity="center" />

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#eff"
      android:layout_marginTop="30dip"
      android:id="@+id/txtPesoAve"
      android:hint="FECHA"
      android:gravity="center" />

    <Button
       android:text="REGISTRAR"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:layout_marginTop="30dip"
       android:textColor="@android:color/white"
       android:id="@+id/btnRegistrar" />
    <Button
       android:text="CONSULTAR"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:textColor="@android:color/white"
       android:id="@+id/btnConsultar" />
    <Button
       android:text="IR AL INICIO"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:textColor="@android:color/white"
       android:id="@+id/btnIrInicio" />
   

</LinearLayout>
