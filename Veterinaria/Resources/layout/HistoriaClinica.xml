<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gestionar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
      android:text="HISTORIAL DE MASCOTAS"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:id="@+id/textView1" />

      <EditText
        
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtIdHistoriaMascota"
      android:background="#eff"
      android:hint="ID ORDEN (debe ser unica)"
      android:gravity="center" />

       <EditText
        android:hint="FECHA"
        android:inputType="datetime"
        android:gravity="center"
        android:background="#eff"
        android:layout_marginTop="25dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFecha"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eff"
        android:layout_marginTop="25dip"
        android:id="@+id/txtNombreEspecialista"
        android:hint="NOMBRE MEDICO O ESPECIALISTA"
        android:gravity="center"/>

    <EditText
      
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#eff"
        android:layout_marginTop="25dip"
       android:id="@+id/txtMotivoConsultaMascota"
       android:hint="MOTIVO DE LA CONSULTA"
       android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eff"
        android:layout_marginTop="25dip"
        android:id="@+id/txtSintomasMascota"
        android:hint="SINTOMAS"
        android:gravity="center"/>

     <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#eff"
        android:layout_marginTop="25dip"
      android:id="@+id/txtProcedimientoMascota"
      android:hint="PROCEDIMIENTO"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#eff"
        android:layout_marginTop="25dip"
      android:id="@+id/txtMedicamentoRecetado"
      android:hint="MEDICAMENTO"
      android:gravity="center"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtCantidadMedicamento"
      android:background="#eff"
        android:layout_marginTop="25dip"
      android:hint="DOSIS MEDICAMENTO"
      android:gravity="center" />

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#eff"
        android:layout_marginTop="25dip"
      android:id="@+id/txtHistorialVacunacion"
      android:hint="HISTORIAL DE VACUNACION"
      android:gravity="center" />

    
    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#eff"
        android:layout_marginTop="25dip"
      android:id="@+id/txtAlergia"
      android:hint="MEDICAMENTOS A LOS QUE PRESENTA ALERGIA"
      android:gravity="center" />
    
    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#eff"
      android:layout_marginTop="25dip"
      android:id="@+id/txtDetalleProcedimientoMascota"
      android:hint="DETALLES DEL PROCEDIMIENTO"
      android:gravity="center" />
     

    <Button
       android:text="REGISTRAR"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="25dip"
       android:backgroundTint="@color/colorPrimary"
       android:textColor="@android:color/white"
       android:id="@+id/btnRegistrar" />
     <Button
       android:text="BUSCAR"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:textColor="@android:color/white"
       android:id="@+id/btnBuscar" />
     <Button
       android:text="ACTUALIZAR"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:textColor="@android:color/white"
       android:id="@+id/btnActualizar" />
    <Button
       android:text="IR AL INICIO"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/colorPrimary"
       android:textColor="@android:color/white"
       android:id="@+id/btnIrInicio" />

    
   

</LinearLayout>